{{if and (not .Type.IsForeign) (not (isClass .Type.GetName))}}
	type {{.Type.GetName}} struct {
		_ structs.HostLayout
		_ [{{.Type.GetSize}}]byte
	}

	func (s *{{.Type.GetName}}) c() *C.{{.Type | cTypeName}} {
		return (*C.{{.Type | cTypeName}})(unsafe.Pointer(s))
	}

